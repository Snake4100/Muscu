<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.muscu.benjamin.muscu.TypeExerciceActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/LinearLayout_TypeExercice">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="66dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText0"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="Nom :"
                android:layout_alignRight="@+id/textView7"
                android:layout_alignEnd="@+id/textView7" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText_nomTypeExercice"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/textView10"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@+id/textView10" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CatÃ©gorie :"
                android:id="@+id/textView7"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/editText_nomTypeSeance"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:id="@+id/spinner_categorieTypeExercice"
                android:layout_alignLeft="@+id/editText_nomTypeSeance"
                android:layout_alignStart="@+id/editText_nomTypeSeance"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/textView7" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zones :"
                android:id="@+id/textView8"
                android:layout_alignBottom="@+id/spinner_categorieTypeExercice"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="0.08" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText_zonesTypeExercice"
                android:layout_weight="0.92" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description :"
                android:id="@+id/textView9"
                android:layout_above="@+id/textView8"
                android:layout_alignParentLeft="true" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="213dp"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/editText_indicationsTypeExercice" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <Button
                android:id="@+id/button_validerTypeExercice"
                android:background="@drawable/button"/>
        </TableRow>

    </LinearLayout>

</RelativeLayout>
