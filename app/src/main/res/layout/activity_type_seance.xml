<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.muscu.benjamin.muscu.TypeSeanceActivity"
    android:windowSoftInputMode="stateHidden">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/LinearLayout_TypeSeance"
        android:weightSum="1"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:layout_width="95dp"
                android:layout_height="27dp"
                android:text="Nom :"
                android:id="@+id/textView3" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText_nomTypeSeance" />
        </TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Les exercices :"
            android:id="@+id/textView10" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="281dp"
            android:id="@+id/listView_exerciceTypeSeance"
            android:layout_weight="0.61" />

        <Button
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/button_ajoutExerciceTypeSeance"
            android:layout_gravity="right"
            android:background="@android:drawable/ic_input_add"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirmer"
            android:id="@+id/button_confirmerTypeSeance"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button"/>
    </LinearLayout>
</RelativeLayout>
