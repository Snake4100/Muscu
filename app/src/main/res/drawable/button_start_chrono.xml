<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_pressed="false">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#07B31E" />
            <gradient android:angle="-90" android:startColor="#07B31E" android:endColor="#04590F" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#03470C" />
            <gradient android:angle="-90" android:startColor="#03470C" android:endColor="#012106" />
        </shape>
    </item>
</selector>