<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_pressed="false">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#CFCFCF" />
            <gradient android:angle="-90" android:startColor="#CFCFCF" android:endColor="#8F8F8F" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#6E6E6E" />
            <gradient android:angle="-90" android:startColor="#6E6E6E" android:endColor="#3B3B3B" />
        </shape>
    </item>
</selector>